<!DOCTYPE html>
<html lang="en">
<head>
    <title>Web Workers</title>
</head>
<body>
    <p>Count numbers: <output id="result"></output></p>
    <button onclick="startWorker()">Start Worker</button>
    <button onclick="stopWorker()">Stop Worker</button>
    <p><bold>Note: </bold>Internet Explorer 9 and earlier versions do not support Web Workers</p>
<script>
    var work;
    function startWorker()
    {
        if(typeof(Worker)!=="undefined"){
            if(typeof(work)=="undefined"){
                work=new Worker("loop1.js");
            }
            work.onmessage=function(event)
            {
                document.getElementById("result").innerHTML=event.dataA;
            };
        }else{
            document.getElementById("result").innnerHTML="Sorry.your browser does not support Web Workers."
        }
    }
    function stopWorker()
    {
        work.terminate();
        work=undefined
    }
</script>
</body>
</html>
